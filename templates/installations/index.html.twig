{% extends 'base.html.twig' %}

{% block title %}Installations index{% endblock %}

{% block body %}
    <h1>Installations index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Internet</th>
                <th>Balcon</th>
                <th>Garage</th>
                <th>Gym</th>
                <th>Piscine</th>
                <th>Camera</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for installation in installations %}
            <tr>
                <td>{{ installation.id }}</td>
                <td>{{ installation.internet ? 'Yes' : 'No' }}</td>
                <td>{{ installation.balcon ? 'Yes' : 'No' }}</td>
                <td>{{ installation.garage ? 'Yes' : 'No' }}</td>
                <td>{{ installation.gym ? 'Yes' : 'No' }}</td>
                <td>{{ installation.piscine ? 'Yes' : 'No' }}</td>
                <td>{{ installation.camera ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_installations_show', {'id': installation.id}) }}">show</a>
                    <a href="{{ path('app_installations_edit', {'id': installation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_installations_new') }}">Create new</a>
{% endblock %}
